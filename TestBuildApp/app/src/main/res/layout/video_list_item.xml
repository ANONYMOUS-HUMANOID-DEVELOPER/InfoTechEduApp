<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:video_card_view="http://schemas.android.com/tools"
    android:padding="6dip">

    <android.support.v7.widget.CardView
        android:id="@+id/video_card_view"
        android:layout_width="271dp"
        android:layout_height="188dp"
        video_card_view:cardCornerRadius="8dp"
        video_card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/video_image"
                android:layout_width="252dp"
                android:layout_height="119dp"
                android:src="@mipmap/ic_lvideo" />

            <TextView
                android:id="@+id/videoTitle"
                android:layout_width="154dp"
                android:layout_height="45dp"
                android:layout_below="@+id/video_image"
                android:layout_alignParentTop="true"
                android:layout_marginTop="122dp"
                android:text="@string/default_course_video_text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/videoDuration"
                android:layout_width="74dp"
                android:layout_height="36dp"
                android:layout_below="@+id/video_image"
                android:layout_alignEnd="@+id/video_image"
                android:layout_alignRight="@+id/video_image"
                android:layout_alignBottom="@+id/videoTitle"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="-8dp"
                android:layout_marginRight="-8dp"
                android:layout_marginBottom="-2dp"
                android:layout_toEndOf="@+id/videoTitle"
                android:layout_toRightOf="@+id/videoTitle"
                android:text="@string/default_video_duration_text"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

