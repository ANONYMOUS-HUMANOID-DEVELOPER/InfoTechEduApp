<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:chapter_card_view="http://schemas.android.com/tools"
    android:padding="6dip">

    <android.support.v7.widget.CardView
        android:id="@+id/chapter_card_view"
        android:layout_width="216dp"
        android:layout_height="183dp"
        chapter_card_view:cardCornerRadius="8dp"
        chapter_card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="216dp"
            android:layout_height="183dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/video_image"
                android:layout_width="191dp"
                android:layout_height="117dp"
                android:src="@drawable/course_icon" />

            <TextView
                android:id="@+id/chapterName"
                android:layout_width="199dp"
                android:layout_height="42dp"
                android:layout_below="@+id/video_image"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:text="@string/default_chapter_name_text"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>